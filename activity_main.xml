<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lad" />

    <ImageView
        android:id="@+id/photo_image_view2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ladoo" />

    <TextView
        android:id="@+id/textwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/photo_image_view2"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-medium"
        android:padding="1dp"
        android:text="LADOO SE CHUMCHUM"
        android:textStyle="bold|italic"
        android:textColor="#fff"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textwa1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textwa"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:text="MUMBAI KE HUM"
        android:textColor="#fff"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textwa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textwa1"
        android:layout_alignRight="@+id/textwa1"
        android:layout_below="@+id/textwa1"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:text="+91-753572887654"
        android:textColor="#fff"
        android:textSize="36sp"
        android:textStyle="bold|italic" />
</RelativeLayout>